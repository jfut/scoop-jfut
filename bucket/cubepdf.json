    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/cube-soft/Cube.Pdf/releases/download/$matchGithubversion/cubepdf-$version-x64.exe"
            },
            "32bit": {
                "url": "https://github.com/cube-soft/Cube.Pdf/releases/download/$matchGithubversion/cubepdf-$version.exe"
            }
        }
    }
